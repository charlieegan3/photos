<p><%= location.Name %></p>
<p>ID: <%= location.ID %></p>

<div><%= map(location.Latitude, location.Longitude) %></div>

<%= form_for(location, {action:"/admin/locations/"+location.Slug, method: "PUT"}) { %>
  <div class="row">
    <div>
      <%= f.InputTag("Name") %>
    </div>
    <div>
      <%= f.InputTag("Latitude") %>
    </div>
    <div>
      <%= f.InputTag("Longitude") %>
    </div>
  </div>

  <br/>
  <%= f.SubmitTag("Update location") %>
<% } %>

<%= form_for(location, {action:"/admin/locations/"+location.Slug, method: "DELETE"}) { %>
  <%= f.SubmitTag("Delete location") %>
<% } %>
