<p><%= device.Name %></p>
<p>ID: <%= device.ID %></p>
<%= form_for(device, {action:"/admin/devices/"+device.Name, method: "PUT"}) { %>
  <div class="row">
    <div>
      <%= f.InputTag("Name") %>
    </div>
    <div>
      <%= f.InputTag("IconURL") %>
    </div>
  </div>

  <%= f.SubmitTag("Update Device") %>
<% } %>

<%= form_for(device, {action:"/admin/devices/"+device.Name, method: "DELETE"}) { %>
  <%= f.SubmitTag("Delete Device") %>
<% } %>
