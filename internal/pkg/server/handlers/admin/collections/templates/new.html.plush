<h1>New Collection</h1>

<%= form_for(collection, {action:"/admin/collections", method: "POST"}) { %>
  <div class="mb1">
    <%= f.InputTag("Title") %>
  </div>
  <div class="mb1">
    <label for="Description">Description</label>
    <textarea class="w-100" name="Description" rows="4"><%= collection.Description %></textarea>
  </div>

  <%= f.SubmitTag("Create Collection") %>
<% } %>